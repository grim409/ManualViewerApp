<Window x:Class="ManualViewerApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launcher Settings"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="10" Width="200">
    <TextBlock Text="X Position:"/>
    <TextBox x:Name="XTextBox" Margin="0,0,0,10"/>

    <TextBlock Text="Y Position:"/>
    <TextBox x:Name="YTextBox" Margin="0,0,0,10"/>

    <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Right" Width="75"/>
  </StackPanel>
</Window>
